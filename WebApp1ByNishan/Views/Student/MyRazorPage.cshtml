@{
    ViewData["Title"] = "MyRazorPage";
    var rollNo = 15; // Replace with your actual roll number
    var multiplicationTable = rollNo + 1;
}

<h1>Welcome, @ViewData["Name"]!</h1>
<p>Current Date and Time: @DateTime.Now</p>
<p>Your Roll No.: @ViewData["RollNo"]</p>
<table class="table">
    <thead>
        <tr>
            <th>Multiplication Table of @multiplicationTable</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i <= 10; i++)
        {
            <tr>
                <td>@multiplicationTable x @i = @(multiplicationTable * i)</td>
            </tr>
        }
    </tbody>
</table>
